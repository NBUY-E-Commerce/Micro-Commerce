@model B_Commerce.SMVC.Models.ProductModelResponse
@{
    ViewBag.Title = "GetProductList";
}

<h2>GetProductList</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">ProductName</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Size</th>
            <th scope="col">Color</th>
            <th scope="col">AvailableCount</th>
            <th scope="col">isActive</th>
            <th scope="col">CategoryID</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.productModels)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Size
                </td>
                <td>
                    @item.Color
                </td>
                <td>
                    @item.AvailableCount
                </td>
                <td>
                    @item.isActive
                </td>
                <td>
                    @item.CategoryID
                </td>
            </tr>
        }

    </tbody>
</table>

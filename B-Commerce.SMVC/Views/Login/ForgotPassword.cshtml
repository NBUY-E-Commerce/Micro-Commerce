@model PasswordChangeResponse
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="all">
                    <div class="box">
                        <p></p>
                        <h4>Forgot Password</h4>
                        <p>Lütfen kayıtlı Email adresinizi giriniz.</p>
                        @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(t => t.Email, new { placeholder = "Email", @class = "form-control", id = "email-modal" })
                                @Html.ValidationMessageFor(t => t.Email, "", new { @class = "text-danger" })
                            </div>
                            if (ViewBag.error != null)
                            {
                                <div>
                                    <span>@ViewBag.error</span>
                                </div>
                            }
                            <p class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Gönder</button>
                            </p>
                        }

                    </div>
                </div>

            </div>


        </div>
    </div>
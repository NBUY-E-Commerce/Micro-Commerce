@model object
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="all">
                    <div class="box">
                        <p></p>
                        <h4>Forgot Password Verify</h4>
                        @using (Html.BeginForm("PasswordVerify", "Login", FormMethod.Post))
                        {
                            @Html.Hidden("Email",Model.ToString())
                            <div class="form-group">

                                @Html.TextBox("PassChangeCode", "", new { placeholder = "Kodunuzu Giriniz", @class = "form-control" })

                            </div>
                            if (ViewBag.error != null)
                            {
                                <div>
                                    <span class="text-danger">@ViewBag.error</span>
                                </div>
                            }
                            <p class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Gönder</button>
                            </p>
                        }

                    </div>
                </div>

            </div>


        </div>
    </div>
@model object
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div id="all">
                <div class="box">
                    <p></p>
                    <h4>Change Password</h4>
                    <p>Lütfen yeni şifrenizi giriniz.</p>
                    @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
                    {
                        @Html.Hidden("Email", Model.ToString())
                        @Html.Hidden("PassChangeCode", Model.ToString())
                        <div class="form-group">
                            @Html.Password("Password", "", new { placeholder = "Password", @class = "form-control", id = "email-modal" })
                        </div>
                        <div class="form-group">
                            @Html.Password("Password2", "", new { placeholder = "Password Again", @class = "form-control", id = "email-modal" })
                        </div>
                        if (ViewBag.error != null)
                        {
                            <div>
                                <span>@ViewBag.error</span>
                            </div>
                        }
                        <p class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Şifreyi Değiştir</button>
                        </p>
                    }

                </div>
            </div>

        </div>


    </div>
</div>


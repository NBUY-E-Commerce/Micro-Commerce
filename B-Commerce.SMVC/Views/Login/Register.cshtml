@model RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li aria-current="page" class="breadcrumb-item active">New account / Sign in</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6">
                    <div class="box">
                        <h1>New account</h1>
                        <hr>
                        @*<p class="lead">Not our registered customer yet?</p>
                            <p>With registration with us new world of fashion, fantastic discounts and much more opens to you! The whole process will not take you more than a minute!</p>
                            <p class="text-muted">If you have any questions, please feel free to <a href="contact.html">contact us</a>, our customer service center is working for you 24/7.</p>
                            <hr>*@
                        <form action="customer-orders.html" method="post" style="margin-top: 25px;">
                            <div class="form-group">
                                @Html.TextBoxFor(t => t.Name, new { placeholder = "Name", @class = "form-control", id = "email-modal" })
                                @Html.ValidationMessageFor(t => t.Name)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(t => t.Surname, new { placeholder = "Surname", @class = "form-control", id = "email-modal" })
                                @Html.ValidationMessageFor(t => t.Surname)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(t => t.Username, new { placeholder = "Username", @class = "form-control", id = "email-modal" })
                                @Html.ValidationMessageFor(t => t.Username)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(t => t.Email, new { placeholder = "Email", @class = "form-control", id = "email-modal" })
                                @Html.ValidationMessageFor(t => t.Email)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(t => t.Phone, new { placeholder = "Phone", @class = "form-control", id = "email-modal" })
                                @Html.ValidationMessageFor(t => t.Phone)
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(t => t.Password, new { placeholder = "Password", @class = "form-control", id = "email-modal" })
                                @Html.ValidationMessageFor(t => t.Password)
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i> Register</button>
                            </div>
                        </form>
                    </div>
                </div>




                <div class="col-lg-6">
                    <div class="box">
                        <h1>Login</h1>
                        @*<p class="lead">Already our customer?</p>
        <p class="text-muted">Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae, ultricies eget, tempor sit amet, ante. Donec eu libero sit amet quam egestas semper. Aenean ultricies mi vitae est. Mauris placerat eleifend leo.</p>*@
                        <hr>
                        @using (Html.BeginForm("Login", "Login"))
                        {
                            <div class="form-group" style="margin-top: 25px;">
                                @Html.TextBoxFor(t => t.Username, new { placeholder = "email", @class = "form-control", id = "email-modal" })
                                @Html.ValidationMessageFor(t => t.Username)
                            </div>

                            <div class="form-group">

                                @Html.PasswordFor(t => t.Password, new { placeholder = "password", @class = "form-control", id = "password-modal" })
                                @Html.ValidationMessageFor(t => t.Password)
                            </div>
                            <p class="text-center">
                                <input type="submit" class="btn btn-primary" value="Login">
                            </p>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model object
<div class="container">
    <div class="row">
        <div class="col-lg-12">


            <div id="all">
                <div class="box">
                    <p></p>
                    <h4>Account Verification</h4>
                    <p>Lütfen emailinize gelen kodu giriniz</p>
                    @using (Html.BeginForm("DoVerify", "Login", FormMethod.Post))
                    {
                        @Html.Hidden("email", Model.ToString())
                        <div class="form-group">

                            @Html.TextBox("code", "", new { placeholder = "Kod", @class = "form-control" })

                        </div>
                        if(ViewBag.error!=null)
                        {
                            <div>
                                <span>@ViewBag.error</span>
                            </div>
                        }
                        <p class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Gönder</button>
                        </p>



                    }

                </div>
            </div>

        </div>


    </div>
</div>
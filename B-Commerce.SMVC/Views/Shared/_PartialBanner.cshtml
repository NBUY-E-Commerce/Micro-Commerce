@model List<BannerModel>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="main-slider" class="owl-carousel owl-theme">

                @foreach (var item in Model)
                {

                    <div class="item">
                       
                        @Html.GetBannerItem(item.BannerType,item.RelatedID,item.Image,item.Description)
     
                    </div>

                }
               

            </div>
            <!-- /#main-slider-->
        </div>
    </div>
</div>
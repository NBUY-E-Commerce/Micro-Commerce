@model List<ProductModel>


<div class="col-md-3 col-sm-6">
    <div class="box same-height" style="height: 347.333px;">
        <h3>Markanın Diğer Ürünleri</h3>
    </div>
</div>
@{int counter = 0, range = 3; }

@if (Model.Count > 0)
{


    foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <div class="product same-height" style="height: 347.333px;">
                <div class="flip-container">
                    <div class="flipper">
                        <div class="front"><a href="@Url.Action("Detail", "Category", new { id = item.ID })"><img src="@item.ProductImages[0]" alt="" class="img-fluid"></a></div>
                        <div class="back"><a href="@Url.Action("Detail", "Category", new { id = item.ID })"><img src="@item.ProductImages[1]" alt="" class="img-fluid"></a></div>
                    </div>
                </div>
                <div class="text">
                    <h3>@item.ProductName</h3>
                    <p class="price">$@item.Price</p>
                </div>
            </div>
            @{counter++;}
            @if (counter >= 3 || counter >= Model.Count)
            {
                break;
            }
            <!-- /.product-->
        </div>
    }
}
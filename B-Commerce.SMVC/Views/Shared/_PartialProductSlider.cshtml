@model List<B_Commerce.SMVC.Models.ProductModel>


<!-- /.container-->
<div class="container">
    <!-- /.product-slider-->
    <div class="product-slider owl-carousel owl-theme owl-loaded owl-drag">
        <div class="owl-stage-outer">
            <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 1776px;">
                @foreach (var item in Model)
                {
                    <!-- /.product-->
                    <div class="owl-item active" style="width: 222px;">
                        <div class="item">
                            <div class="product">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front"><a href="detail.html"><img src="/img/product1.jpg" alt="" class="img-fluid"></a></div> <!-- resim yolu modele eklenip  -->
                                        <div class="back"><a href="detail.html"><img src="/img/product1_2.jpg" alt="" class="img-fluid"></a></div><!-- burada kullanılacak.  -->
                                    </div>
                                </div><a href="detail.html" class="invisible"><img src="/img/product1.jpg" alt="" class="img-fluid"></a>
                                <div class="text">
                                    <h3><a href="detail.html">@item.Description</a></h3>
                                    <p class="price">
                                        <del></del>@item.Price
                                    </p>
                                </div>
                                @*@if (item.IsInSale)
                                {
                                    <div class="ribbon sale">
                                        <div class="theribbon">SALE</div>
                                        <div class="ribbon-background"></div>
                                    </div>
                                }
                                @if (item.IsInNew)
                                {
                                    <div class="ribbon new">
                                        <div class="theribbon">NEW</div>
                                        <div class="ribbon-background"></div>
                                    </div>
                                }
                                @if (item.IsInGift)
                                {
                                    <div class="ribbon gift">
                                        <div class="theribbon">GIFT</div>
                                        <div class="ribbon-background"></div>
                                    </div>
                                }*@
                            </div>
                            <!-- /.product-->
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.product-slider-->
</div>
<!-- /.container-->

                $("#info").hide();
            }
        });

    </script>



    <script>
        $(function () {

            $("#searchBox").keyup(function () {
                var searchtext = $("#searchBox").val();
                console.log(searchtext);
                $("#resultarea").html("Yükleniyor.....");
                $.ajax({
                    url: "/Product/ProductSearchAjax",
                    data: { searchText: searchtext },
                    method: "POST",
                    success: function (d) {


@model LoginModel
@using (Ajax.BeginForm("",new AjaxOptions {


}))
{
    <div class="form-group">
        @Html.TextBoxFor(t => t.UserName, new { placeholder = "email", @class = "form-control", id = "email-modal" })
        @Html.ValidationMessageFor(t => t.UserName)
    </div>

    <div class="form-group">

        @Html.PasswordFor(t => t.Password, new { placeholder = "password", @class = "form-control", id = "password-modal" })
        @Html.ValidationMessageFor(t => t.UserName)
        <input id="password-modal" type="password" placeholder="password" class="form-control">
    </div>
}



<form action="customer-orders.html" method="post">
    <div class="form-group">
        <input id="email-modal" type="text" placeholder="email" class="form-control">
    </div>
    <div class="form-group">
        <input id="password-modal" type="password" placeholder="password" class="form-control">
    </div>
    <p class="text-center">
        <button class="btn btn-primary"><i class="fa fa-sign-in"></i> Log in</button>
    </p>
</form>
<p class="text-center text-muted">Not registered yet?</p>
